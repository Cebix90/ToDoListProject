<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type TextBlock}" x:Key="DefaultTextStyle">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="LoginTextBlockStyle">
        <Setter Property="Margin" Value="0 20 0 10"></Setter>
        <Setter Property="FontSize" Value="23"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="SignUpTextBlockStyle">
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Margin" Value=" 0 10 0 0"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    </Style>

</ResourceDictionary>